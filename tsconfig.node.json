{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    
    /* Project Reference */
    "composite": true,  // Ensure that composite is true for project references
    "noEmit": true,     // Prevent emitting output
    
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true, // Allow importing TypeScript extensions
    "isolatedModules": true,
    "moduleDetection": "force",
    
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["vite.config.ts"] // Include Vite config for Node.js
}
